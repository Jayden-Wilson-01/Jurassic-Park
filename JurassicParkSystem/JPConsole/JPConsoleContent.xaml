<UserControl x:Class="JurassicParkSystem.JPConsole.JPConsoleContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JurassicParkSystem.JPConsole"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">

    <TextBox Background="Blue" 
             Foreground="White"
             VerticalScrollBarVisibility="Visible"
             x:Name="ConsoleTextBox"
             x:FieldModifier="public"
             PreviewKeyDown="ConsoleTextBox_PreviewKeyDown">
    </TextBox>
    
</UserControl>
